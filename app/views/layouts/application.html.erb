        $('#chat').append(":&nbsp;&nbsp;&nbsp;");
        $('#chat').append(msg);
        $('#chat').append("<br>");
        
        
      }

      function user_notify(uid) {
        
        var content = " sent you a message"
        $('#online_'+uid).append(content)
      }
 

