<div id = "active">
	</div>
<div id = "chat">
<%= render @chats %>
</div>

<%= form_for Chat.new, remote: true do |f| %>
    <%= f.label :chat %><br>
    <%= f.text_field :chat %><br>
    <%= f.hidden_field :receiver_id, :value => @user.id %>
     <%= f.hidden_field :sender_id, :value => current_user.id %>
    <%= f.submit "Send" %>
<% end %>

